{
    "manifest_version": 2,

    "name": "YouTube URL Scraper",
    "description": "Finds and returns a list of all YouTube url's from a given link",
    "version": "1.0",

    "background": {
        "scripts": ["js/main.js"]
    },

    "browser_action": {
        "default_icon": "png/icon.png",
        "default_popup": "html/popup.html"
    },

    "content_security_policy": "script-src 'self' https://*.google.com/; object-src 'self'",

    "permissions": ["http://*/", "https://*/", "activeTab", "storage", "contextMenus"]
}
